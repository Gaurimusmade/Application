@model Application.Models.Private

@{
    ViewData["Title"] = "Create";
}


<div class="imgdiv"> <img src="/image/company-logo-2.png"></div>
<div class="title">Application Form</div>
<p>
    Thank you for the interest shown in MPY TECHNOLOGIES.Please take a few minutes of
    your time to fill in the following details to help us understand your technical skills and
    personal competencies better.
</p>
<p>Please keep in mind the following when filling up the form:</p>
<ol type="1">
    <li>
        Fill in the boxes in application blank in bold capital<br>
        Letter unless the content is of a descriptive nature.
    </li>
    <li>
        Fill in the details according to the format mentioned<br>
        For the date and day.
    </li>
</ol>
<div class="content">
        <form asp-action="Create" id="perdet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="user-details">
            <div class="input-box">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="FatherName" class="control-label"></label>
                <input asp-for="FatherName" class="form-control" />
                <span asp-validation-for="FatherName" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Nationality" class="control-label"></label>
                <input asp-for="Nationality" class="form-control" />
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="SecurityNumber" class="control-label"></label>
                <input asp-for="SecurityNumber" class="form-control" />
                <span asp-validation-for="SecurityNumber" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="PANNumber" class="control-label"></label>
                <input asp-for="PANNumber" class="form-control" />
                <span asp-validation-for="PANNumber" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="PlaceOfBirth" class="control-label"></label>
                <input asp-for="PlaceOfBirth" class="form-control" />
                <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="MaritalStatus" class="control-label"></label>
                <select asp-for="MaritalStatus" class="form-control">
                    <option value="Single">Single</option>
                    <option value="Married">Married</option>
                    <option value="Divorced">Divorced</option>
                    <option value="Widowed">Widowed</option>
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>
            <div class="input-box">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>
            <div class="button">
                <input type="submit" value="Next"/>
            </div>
            
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
